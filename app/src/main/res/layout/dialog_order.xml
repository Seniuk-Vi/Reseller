    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_slab"
                android:text="Enter your name"
                android:textColor="@color/PriceColor"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/PopUp"
                android:hint="Here"
                android:inputType="text|textMultiLine|textCapSentences"
                android:maxLength="70"
                android:maxLines="5"
                android:textColor="@color/PopUp"
                android:textColorHint="@color/PopUp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_slab"
                android:text="Location"
                android:textColor="@color/PriceColor"
                android:textSize="25sp" />



                    <EditText
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:backgroundTint="@color/PopUp"
                        android:hint="Town"


                        android:textColor="@color/PopUp"
                        android:textColorHint="@color/PopUp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_slab"
                android:text="Phone"
                android:textColor="@color/PriceColor"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/PopUp"
                android:hint="Number"
                android:maxLength="10"
                android:inputType="number"
                android:textColor="@color/PopUp"
                android:textColorHint="@color/PopUp" />


            <Button
                android:id="@+id/clearOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/pop_up"
                android:backgroundTint="@color/colorAccentStronger"
                android:text="  Clear  "
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/confirm_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/pop_up"
                android:backgroundTint="@color/green"
                android:text="  CONFIRM ORDER  "
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>