<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_id_picker"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"

    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="10dp">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/book_img_id_picker"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#2d2d2d"
            android:scaleType="centerCrop"
            android:transitionName="image_transition"/>

        <TextView
            android:id="@+id/book_category_id_picker"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="top"
            android:gravity="top"
            android:layout_marginLeft="16dp"
            android:textColor="@color/colorAccentStronger"
            android:textSize="15sp"
            android:text="222"
            android:textStyle="bold"
            android:transitionName="price_transition"
            />

        <TextView
            android:id="@+id/book_title_id_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:transitionName="heading_transition"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>